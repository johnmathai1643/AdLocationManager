<% content_for :page_wrapper do %>
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">AdManager</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
           
             <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Users
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="dataTable_wrapper">
                                <table class="table table-striped table-bordered table-hover display compact" id="dataTables">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Email</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                      <% @users.each do |user| %>
                                        <tr>
                                          <td><%= user.id %></td>
                                          <td><%= user.email %></td>
                                        </tr>
                                      <% end %>
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.table-responsive -->
                        </div> <!-- /.panel-body -->
                    </div> <!-- /.panel -->

                </div>
                <!-- /.col-lg-12 -->
            </div>
        </div>
        <!-- /#page-wrapper -->

<% end %>    

<% content_for :script do %>

<script type="text/javascript">
    $(document).ready(function(){
    $('#dataTables').DataTable();
});
</script>
<% end %>    

