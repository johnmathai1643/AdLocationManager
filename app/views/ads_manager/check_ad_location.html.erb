<% content_for :page_wrapper do %>
   
   <div id="map_script">
       <%= render(:partial => "/ads_manager/map_partial_for_check_ad") %>
   </div>

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Dashboard</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
           
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-8">
	                    <!-- /.panel -->
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <i class="fa fa-map-marker fa-fw"></i> Map
                            <div class="pull-right">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                                        Actions
                                        <span class="caret"></span>
                                    </button>
                                    <ul class="dropdown-menu pull-right" role="menu">
                                        <li><a href="#">Action</a>
                                        </li>
                                        <li><a href="#">Another action</a>
                                        </li>
                                        <li><a href="#">Something else here</a>
                                        </li>
                                        <li class="divider"></li>
                                        <li><a href="#">Separated link</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <!-- /.panel-heading --> 
                        <div class="panel-body">
                            <div class="row">
                              <div id="render_map">
                                <div id="map-canvas" class="col-lg-12">
                                </div>
                               </div> 
                                <!-- /.col-lg-4 (nested) -->
                            </div>
                            <!-- /.row -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-8 -->
                <div class="col-lg-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <i class="fa fa-bell fa-fw"></i> Ad Location Panel List
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="list-group">
                              <% @ads_manager.each do |ads| %>
                                <a href="#" class="list-group-item">
                                    <i class="fa fa-location-arrow fa-fw"></i><%= ads.name %>
                                    <!-- <span class="pull-right text-muted small"><em>4 minutes ago</em> -->
                                    <!-- </span> -->
                                </a>
                              <% end -%>  
                            </div>
                            <!-- /.list-group -->
                            <a href="#" class="btn btn-default btn-block">View All Ad Locations</a>
                        </div>
                        <!-- /.panel-body -->
                    </div>

                    <!-- /.panel -->
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <i class="fa fa-bar-chart-o fa-fw"></i> Enter Location
                        </div>
                        <div class="panel-body">
                                 <%= form_tag({:controller => 'ads_manager',:action =>"get_ad_location"},{:class => 'form', :method => 'post', :remote =>"true"}) do |f| %>
                                         <div class="form-group">
                                          <%= label_tag "Latitude" %>
                                          <%= text_field_tag "lat" ," ", class: "form-control"%>
                                         </div>
                                         <div class="form-group">
                                          <%= label_tag "Longitude" %>
                                          <%= text_field_tag "lon" ," ", class: "form-control"%>
                                         </div>
                                         <div class="form-group">
                                          <%= submit_tag "Find", class: "form-control"%>
                                         </div>                                          
                                 <%-end%>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-4 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

<% end %>