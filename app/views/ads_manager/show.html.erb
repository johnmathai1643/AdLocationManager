<% content_for :page_wrapper do %>
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">AdManager</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
           
             <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                           <%= @ads_manager.id %>
                        </div>
                       
                        <div class="panel-body">
                           <p>
							  <strong>Title:</strong>
							  <%= @ads_manager.name %>
							</p>
							<p>
							  <strong>Snippet:</strong>
							  <%= @ads_manager.snippet %>
							</p>
							<p>
							  <strong>Latitudes:</strong>
							  <%= @ads_manager.latitude %>
							</p>
							<p>
							  <strong>Longitudes:</strong>
							  <%= @ads_manager.longitude %>
							</p>
                            <p>
                              <strong>Address:</strong>
                              <%= @ads_manager.address %>
                            </p>
                            <p>
                              <strong>Image:</strong>
                              <img alt="Icon" src=<%= "http://localhost:3000/" + @ads_manager.image %> height="50" width="50" />
                            </p>
					    </div> <!-- /.panel-body -->
                    </div> <!-- /.panel -->

                </div>
                <!-- /.col-lg-12 -->
            </div>
        </div>
        <!-- /#page-wrapper -->

<% end %>    

