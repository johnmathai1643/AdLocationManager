<% content_for :page_wrapper do %>
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">AdManager</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
           
             <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <i class="fa fa-bar-chart-o fa-fw"></i> Add Advertisement
                        </div>
                        <div class="panel-body">
                             <%= form_for :ads_manager, url: {action: "create"}, html: {class: "form"}  do |f| %>
                                         <div class="form-group">
                                          <%= f.label :Name %>
                                          <%= f.text_field :name, class: "form-control"%>
                                         </div>
                                         <div class="form-group">
                                          <%= f.label :Latitude %>
                                          <%= f.text_field :lat, class: "form-control"%>
                                         </div>
                                         <div class="form-group">
                                          <%= f.label :Longitude %>
                                          <%= f.text_field :lon, class: "form-control"%>
                                         </div>
                                         <div class="form-group">
                                          <%= f.label :Snippet %>
                                          <%= f.text_area :snippet, size:"100x3", class: "form-control"%>
                                            <p class="help-block">Enter additional details to location or ad.</p>
                                         </div>
                                         <div class="form-group">
                                          <%= f.submit %>
                                         </div>                                          
                               <%-end%>
                        </div> <!-- /.panel-body -->
                    </div> <!-- /.panel -->

                </div>
                <!-- /.col-lg-12 -->
            </div>
        </div>
        <!-- /#page-wrapper -->

<% end %>    

